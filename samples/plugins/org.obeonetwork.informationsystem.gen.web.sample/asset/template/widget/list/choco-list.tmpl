<!--
	@param {model.Choco[]} content
	@param {model.Proxy[]} proxies
	@param {model.Proxy} currentProxy
-->
<script type="text/x-handlebars" data-template-name="choco-list">
	<!-- Start of user code choco-list -->
			{{#if paginationProxies}}
		<div class="pagination" style="text-align: center;">
			<ul>
				{{#each paginationProxy in paginationProxies}}
					{{#if paginationProxy.active}}
					<li class="active">
						<a href="#">
					{{else}}
					<li class="">
						<a {{action "paginationLink" context="paginationProxy"}} href="#" class="pagination-link">
					{{/if}}
						{{paginationProxy.desc}}
						</a>
					</li>
					
				{{/each}}
			</ul>
		</div>
		{{/if}}
	{{#with content as choco}}
		{{#if choco.local}}
		<div class="well local">

			{{#if choco.localRemove}}
			<div style="float: right;">
				<img class="align-left" src="./asset/img/remove.png" height="24px">
			</div>
			{{/if}}
			{{#if choco.localAdd}}
			<div style="float: right;">
				<img class="align-left" src="./asset/img/add.png" height="24px">
			</div>
			{{/if}}
			{{#if choco.localUpdate}}
			<div style="float: right;">
				<img class="align-left" src="./asset/img/refresh.png" height="24px">
			</div>
			{{/if}}

			<div class="btn-group">
				<a {{action "editAction" context="choco"}} class="btn btn-inverse" href="#"><i class=""></i> 
					{{choco.shortDescription}}
				</a>
				<a class="btn btn-inverse dropdown-toggle" data-toggle="dropdown" href="#">&nbsp;<span class="caret"></span></a>
				<ul class="dropdown-menu">
					<li>
						<a {{action "editAction" context="choco"}} href="#"><i class="icon-pencil"></i> Edit</a>
					</li>
					<li>
						<a {{action "removeAction" context="choco"}} href="#"><i class="icon-trash"></i> Delete</a>
					</li>
				</ul>
			</div>
			<ul class="choco-row">
					<li>{{choco.shortDescription}}</li>
				
					<li>{{choco.description}}</li>
				
				{{#if choco.userProxy}}
				<li>
					User :
					<a {{action "userLink" context="choco.userProxy"}} href="#" class="user-link">{{choco.userProxy.desc}} ({{choco.userProxy.id}})</a>
				</li>
				{{/if}}
				
					<li>status : {{choco.status}}</li>
				
			</ul>
		</div>
		{{else}}
		<div class="well">

			<div class="btn-group">
				<a {{action "editAction" context="choco"}} class="btn btn-inverse" href="#"><i class=""></i> 
					{{choco.shortDescription}}
				</a>
				<a class="btn btn-inverse dropdown-toggle" data-toggle="dropdown" href="#">&nbsp;<span class="caret"></span></a>
				<ul class="dropdown-menu">
					<li>
						<a {{action "editAction" context="choco"}} href="#"><i class="icon-pencil"></i> Edit</a>
					</li>
					<li>
						<a {{action "removeAction" context="choco"}} href="#"><i class="icon-trash"></i> Delete</a>
					</li>
				</ul>
			</div>
			<ul class="choco-row">
					<li>{{choco.shortDescription}}</li>
				
					<li>{{choco.description}}</li>
				
				{{#if choco.userProxy}}
				<li>
					User :
					<a {{action "userLink" context="choco.userProxy"}} href="#" class="user-link">{{choco.userProxy.desc}} ({{choco.userProxy.id}})</a>
				</li>
				{{/if}}
				
					<li>status : {{choco.status}}</li>
				
			</ul>
		</div>
		{{/if}}
	{{/with}}
		{{#if paginationProxies}}
		<div class="pagination" style="text-align: center;">
			<ul>
				{{#each paginationProxy in paginationProxies}}
					{{#if paginationProxy.active}}
					<li class="active">
						<a href="#">
					{{else}}
					<li class="">
						<a {{action "paginationLink" context="paginationProxy"}} href="#" class="pagination-link">
					{{/if}}
						{{paginationProxy.desc}}
						</a>
					</li>
					
				{{/each}}
			</ul>
		</div>
		{{/if}}
	<!-- End of user code -->
</script>

